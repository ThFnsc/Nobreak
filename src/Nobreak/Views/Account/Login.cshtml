@model Nobreak.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_CardLayout.cshtml";
}

@using (Html.BeginForm(FormMethod.Post))
{
    @await Html.PartialAsync("_ModelStateAlert")
    <p class="h4">Olá!</p>
    <p class="h6">Vamos começar com os seus dados 😉</p>
    <div class="form-group">
        @Html.LabelFor(l => l.Email)
        @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Password)
        @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Password)
    </div>
    <button type="submit" class="btn btn-primary btn-block my-2">Entrar</button>
    @await Html.PartialAsync("_ReCaptcha", Model)
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}