@inherits LayoutComponentBase
@inject IDbContext _context

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="content px-4">
            @if (_noUsers)
            {
                <div class="alert alert-warning">Nenhum usuário cadastrado ainda. <button class="btn btn-warning" @onclick="SignUp">Cadastrar</button></div>
            }
            @Body
        </div>
    </div>
</div>

@code {
    private bool _noUsers;

    [CascadingParameter]
    public IModalService Modal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _noUsers = !await _context.Accounts.AnyAsync();
    }

    private void SignUp()
    {
        Modal.Show<Login>("Cadastro", new ModalOptions
        {
            Animation = ModalAnimation.FadeInOut(.3)
        });
    }
}