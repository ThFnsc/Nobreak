@typeparam T

@if (Source is null)
{
    if (Loading is null)
    {
        <Loader />
    }
    else
    {
        @Loading
    }
}
else if (!Source.Any())
{
    if (Empty is null)
    {
        <div class="alert alert-info">Nenhum dado para mostrar</div>
    }
    else
    {
        @Empty
    }
}
else
{
    <table class="table table-hover table-striped table-dark">
        <thead>
            <tr>
                @Head
            </tr>
        </thead>
        <tbody>
            @if (InvertStripe)
            {
                <tr style="height:0!important;"></tr>
            }
            @if (Virtualize)
            {
                <Virtualize TItem="T" Context="item" OverscanCount="50" Items="Source">
                    <tr class="bg-@(RowColor?.Invoke(item))">
                        @Body(item)
                    </tr>
                </Virtualize>
            }
            else
            {
                @foreach (var item in Source)
                {
                    <tr class="bg-@(RowColor?.Invoke(item))">
                        @Body(item)
                    </tr>
                }
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public RenderFragment Head { get; set; }

    [Parameter]
    public RenderFragment<T> Body { get; set; }

    [Parameter]
    public RenderFragment Empty { get; set; }

    [Parameter]
    public RenderFragment Loading { get; set; }

    [Parameter]
    public ICollection<T> Source { get; set; }

    [Parameter]
    public Func<T, string> RowColor { get; set; }

    [Parameter]
    public bool InvertStripe { get; set; }

    [Parameter]
    public bool Virtualize { get; set; }
}
